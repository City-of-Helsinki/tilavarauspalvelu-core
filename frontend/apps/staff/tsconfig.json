{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@gql/*": ["./gql/*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "next": ["./node_modules/next"],
      "next-i18next": ["./node_modules/next-i18next"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "src",
    "gql",
    "types/**/*.d.ts",
    "i18next.d.ts",
    "middleware.ts",
    "stylelint.config.cjs",
    "next-i18next.config.cjs",
    "vitest.config.mts",
    "vitest.setup.ts",
    "__mocks__",
    "gql-plug.mjs",
    "next.config.mjs",
    "next-env.d.ts"
  ]
}

{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules/"],
  "include": [
    "src",
    "gql",
    "index.ts",
    "types/**/*.d.ts",
    "prettier.config.cjs",
    "stylelint.config.cjs",
    "vitest.setup.ts",
    "vitest.config.mts"
  ]
}

{% extends "email/html/partials/base.jinja" %}

{% block title %}{{ subjectCancelled }}{% endblock %}

{% block header %}{% include "email/html/partials/header.jinja" %}{% endblock %}

{% block content %}
    <div class="main-container">
        <p>{{ reservationCancelled }}</p>
        <p>{{ cancellationReason }}: {{ cancel_reason }}</p>

        {% include "email/html/partials/reservation_unit_info.jinja" %}
        {% include "email/html/partials/reservation_datetime.jinja" %}
        {% include "email/html/partials/reservation_price.jinja" %}
    </div>

    <div class="secondary-container">
        <h2>{{ cancellationInstructions }}</h2>
        <p>{{ cancelled_instructions }}</p>

        <div class="spacer"></div>

        <p>{{ withRegards }}</p>
        <p>{{ serviceName }}</p>

        {% include "email/html/partials/automatic_message.jinja" %}
    </div>
{% endblock %}

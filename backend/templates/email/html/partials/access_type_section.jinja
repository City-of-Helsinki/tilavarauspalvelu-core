{% for reservation_unit in reservation_units %}
<mj-spacer />
<mj-text><b>{{ reservation_unit.reservation_unit_name | safe }}</b></mj-text>
<mj-text>{{ reservation_unit.unit_name | safe }}, {{ reservation_unit.unit_location | safe }}</mj-text>
<mj-text>{{ access_types_label | safe }}:</mj-text>
<mj-text>
<ul style="margin: 0">
{% for access_type in reservation_unit.access_types %}
<li>
{{ access_type.access_type | safe }}: {{ access_type.begin_date }} -{% if access_type.end_date %} {{ access_type.end_date }}{% endif %}
</li>
{% endfor %}
</ul>
</mj-text>
{% endfor %}

{
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "inlineSources": false,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules/"],
  "include": [
    "src",
    "gql",
    "styles",
    "index.ts",
    "types/**/*.d.ts",
    ".eslintrc.cjs",
    "prettier.config.cjs",
    "stylelint.config.js",
    "vitest.setup.ts",
    "vitest.config.mts"
  ]
}

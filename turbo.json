{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "env": ["SENTRY_*", "SKIP_ENV_VALIDATION", "EMAIL_VARAAMO_EXT_LINK"],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "deploy": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ]
    },
    "tsc:check": {},
    "tsc:clean": {},
    "lint:css": {},
    "test": {
      "env": ["SKIP_ENV_VALIDATION"],
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "**/*.tsx",
        "**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

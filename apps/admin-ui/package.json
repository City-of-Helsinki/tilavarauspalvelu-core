{
  "name": "admin-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "dev": "next dev -p 3001",
    "build": "SKIP_ENV_VALIDATION=true next build",
    "start": "next start",
    "lint": "SKIP_ENV_VALIDATION=true eslint .",
    "lint:fix": "SKIP_ENV_VALIDATION=true eslint . --fix",
    "lint:css": "SKIP_ENV_VALIDATION=true stylelint './src/**/*.tsx'",
    "format": "SKIP_ENV_VALIDATION=true prettier --ignore-path \"../.prettierignore\" --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "test": "SKIP_ENV_VALIDATION=true TZ=Europe/Helsinki jest --runInBand",
    "test:watch": "SKIP_ENV_VALIDATION=true jest --watch",
    "tsc:check": "tsc --noEmit --project tsconfig.tscheck.json",
    "tsc:clean": "tsc --build --clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx}": "prettier --write",
    "*.{js,ts,tsx}": "eslint --cache",
    "*.{tsx,css,scss}": "stylelint"
  },
  "dependencies": {
    "@apollo/client": "^3.8.6",
    "@hookform/resolvers": "^3.3.2",
    "@joi/date": "^2.1.0",
    "@n8tb1t/use-scroll-position": "^2.0.3",
    "@next/bundle-analyzer": "^13.5.6",
    "@next/eslint-plugin-next": "^14.0.4",
    "@sentry/nextjs": "^7.77.0",
    "apollo-upload-client": "17.0.0",
    "classnames": "^2.3.2",
    "common": "workspace:*",
    "date-fns": "^2.30.0",
    "eslint-config-custom": "workspace:*",
    "focus-trap-react": "^10.2.3",
    "form-data": "^4.0.0",
    "graphql": "^16.8.1",
    "hds-core": "^2.17.0",
    "hds-react": "^2.17.0",
    "i18next": "^23.6.0",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "next": "13.5.6",
    "next-i18next": "^14.0.3",
    "query-string": "7.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-hook-form": "^7.49.2",
    "react-i18next": "^13.3.1",
    "react-quill": "2.0.0",
    "react-router-dom": "^6.18.0",
    "react-use": "^17.4.0",
    "reactjs-popup": "^2.0.6",
    "sass": "^1.69.5",
    "sharp": "^0.33.0",
    "styled-components": "5.3.11",
    "tsconfig": "workspace:*",
    "typescript-cookie": "^1.0.6",
    "viewport-mercator-project": "^7.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/apollo-upload-client": "17.0.2",
    "@types/jest": "^29.5.7",
    "@types/jest-axe": "^3.5.7",
    "@types/lodash": "^4.14.200",
    "@types/node": "^18.18.8",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.29",
    "@vercel/style-guide": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-axe": "^7.0.1",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.3.0",
    "postcss-scss": "^4.0.9",
    "postcss-styled-syntax": "^0.5.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}

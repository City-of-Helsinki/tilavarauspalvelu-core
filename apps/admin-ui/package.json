{
  "name": "admin-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "dev": "next dev -p 3001",
    "build": "SKIP_ENV_VALIDATION=true next build",
    "start": "next start",
    "lint": "SKIP_ENV_VALIDATION=true eslint .",
    "lint:fix": "SKIP_ENV_VALIDATION=true eslint . --fix",
    "lint:css": "SKIP_ENV_VALIDATION=true stylelint './src/**/*.tsx'",
    "format": "SKIP_ENV_VALIDATION=true prettier --ignore-path \"../.prettierignore\" --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "test": "SKIP_ENV_VALIDATION=true TZ=Europe/Helsinki jest --runInBand",
    "test:watch": "SKIP_ENV_VALIDATION=true jest --watch",
    "tsc:check": "tsc --noEmit --project tsconfig.tscheck.json",
    "tsc:clean": "tsc --build --clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx}": "prettier --write",
    "*.{js,ts,tsx}": "eslint --cache",
    "*.{tsx,css,scss}": "stylelint"
  },
  "dependencies": {
    "@apollo/client": "^3.9.7",
    "@hookform/resolvers": "^3.9.0",
    "@n8tb1t/use-scroll-position": "^2.0.3",
    "@next/bundle-analyzer": "^14.2.9",
    "@next/eslint-plugin-next": "^14.2.9",
    "@sentry/nextjs": "^8.29.0",
    "apollo-upload-client": "17.0.0",
    "classnames": "^2.5.1",
    "common": "workspace:*",
    "date-fns": "^3.6.0",
    "eslint-config-custom": "workspace:*",
    "focus-trap-react": "^10.2.3",
    "form-data": "^4.0.0",
    "graphql": "^16.9.0",
    "hds-core": "^3.10.0",
    "hds-react": "^3.10.0",
    "i18next": "^23.15.1",
    "lodash": "^4.17.21",
    "next": "14.2.9",
    "next-i18next": "^15.3.1",
    "query-string": "9.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.0.13",
    "react-hook-form": "^7.52.1",
    "react-i18next": "^15.0.1",
    "react-quill": "2.0.0",
    "react-router-dom": "^6.23.1",
    "react-use": "^17.5.1",
    "reactjs-popup": "^2.0.6",
    "sass": "^1.78.0",
    "sharp": "^0.33.5",
    "styled-components": "5.3.11",
    "tsconfig": "workspace:*",
    "typescript-cookie": "^1.0.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/apollo-upload-client": "17.0.2",
    "@types/jest": "^29.5.12",
    "@types/jest-axe": "^3.5.9",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.3.0",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.29",
    "@vercel/style-guide": "^6.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss-scss": "^4.0.9",
    "postcss-styled-syntax": "^0.6.4",
    "prettier": "^3.3.3",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  }
}

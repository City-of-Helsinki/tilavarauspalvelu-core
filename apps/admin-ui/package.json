{
  "name": "admin-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "dev": "next dev -p 3001",
    "build": "SKIP_ENV_VALIDATION=true next build",
    "start": "next start",
    "lint": "SKIP_ENV_VALIDATION=true eslint .",
    "lint:fix": "SKIP_ENV_VALIDATION=true eslint . --fix",
    "lint:css": "SKIP_ENV_VALIDATION=true stylelint './src/**/*.tsx'",
    "format": "SKIP_ENV_VALIDATION=true prettier --ignore-path \"../.prettierignore\" --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "test": "SKIP_ENV_VALIDATION=true TZ=Europe/Helsinki vitest",
    "tsc:check": "tsc --noEmit --project tsconfig.json",
    "tsc:clean": "tsc --build --clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx}": "prettier --write",
    "*.{js,ts,tsx}": "eslint --cache",
    "*.{tsx,css,scss}": "stylelint"
  },
  "dependencies": {
    "@apollo/client": "^3.13.1",
    "@hookform/resolvers": "^4.1.2",
    "@n8tb1t/use-scroll-position": "^2.0.3",
    "@sentry/nextjs": "^8.29.0",
    "apollo-upload-client": "18.0.1",
    "common": "workspace:*",
    "date-fns": "^4.1.0",
    "eslint-config-custom": "workspace:*",
    "form-data": "^4.0.2",
    "graphql": "^16.10.0",
    "hds-core": "^4.2.0",
    "hds-react": "^4.2.0",
    "i18next": "^23.15.1",
    "lodash-es": "^4.17.21",
    "next": "15.2.4",
    "next-i18next": "^15.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^5.0.0",
    "react-hook-form": "^7.54.2",
    "react-i18next": "^15.4.1",
    "react-quill": "2.0.0",
    "react-router-dom": "^6.23.1",
    "react-use": "^17.6.0",
    "reactjs-popup": "^2.0.6",
    "styled-components": "6.1.15",
    "tsconfig": "workspace:*",
    "typescript-cookie": "^1.0.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@graphql-tools/graphql-tag-pluck": "^8.3.19",
    "@happy-dom/jest-environment": "^17.4.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.14.1",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "happy-dom": "^17.1.8",
    "postcss-styled-syntax": "^0.7.1",
    "prettier": "^3.5.3",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7"
  }
}

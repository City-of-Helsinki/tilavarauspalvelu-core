{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./*"],
      "@gql/*": ["./gql/*"],
      "@test/*": ["./test/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "env.mjs",
    "types/**/*.d.ts",
    "next.config.mjs",
    "next-env.d.ts",
    "next-i18next.config.cjs",
    "prettier.config.mjs",
    "vitest.config.mts",
    "vitest.setup.ts",
    "stylelint.config.cjs",
    "sentry.server.config.ts",
    "sentry.edge.config.ts",
    "sentry.client.config.ts"
  ]
}

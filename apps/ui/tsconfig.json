{
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./*"],
      "@gql/*": ["./gql/*"]
    },
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "env.mjs",
    "types/**/*.d.ts",
    "next.config.mjs",
    "next-env.d.ts",
    "next-i18next.config.js",
    "prettier.config.mjs",
    "vitest.config.mts",
    "vitest.setup.ts",
    "stylelint.config.cjs",
    "sentry.server.config.ts",
    "sentry.edge.config.ts",
    "sentry.client.config.ts",
    ".eslintrc.cjs"
  ]
}
